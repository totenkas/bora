
<%= simple_form_for @event do |f| %>
  <%= f.input :title, label: false, placeholder: 'Untitled Event' %>
  <%= f.input :start, label: false %>
  <%= f.input :end, label: false %>
  <%= f.input :location, label: false, placeholder: 'Place name, address, or link' %>
  <%= f.input :spots, label: false, placeholder: 'Unlimited spots' %>
  <%= f.input :cost_per_person, label: false, placeholder: 'Cost per person' %>
  <%= f.input :custom_link, label: false, placeholder: 'Add custom link or text' %>
  <%= f.input :description, label: false, placeholder: 'Add a description of your event' %>
  <%= f.input :photo, label: false, as: :file, input_html: { class: 'form-control-file' } %>

  <%= f.button :submit, "SAVE DRAFT", class: 'btn btn-primary' %>
<% end %>
